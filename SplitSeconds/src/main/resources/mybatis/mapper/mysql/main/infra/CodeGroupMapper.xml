<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qwer.module.codeGroup.CodeGroupDao">

	<resultMap id="resultMapObj" type="com.qwer.module.codeGroup.CodeGroupDto"></resultMap>
	
	<sql id="selectCommon"> 
		from codegroup 
	<!--조건  / 이 테이블 컬럼을 설정 -->
		where 1=1	<!-- 조건 -->
			and cgdelNy = 0
	</sql>
	
	<select id="selectOneCount" resultType="Integer">
	           <!-- DAO함수 -->
		SELECT COUNT(*) <!-- 데이터가 총 몇개가 있는지  -->
		<include refid="selectCommon"/> <!-- include refid=이름은 해당되는 id를 이 위치에 갖고 오겠다 -->
	</select>
	
	   

	  <select id="selectList" resultMap="resultMapObj">
	    select aa.* from (
			  select 
				    cgseq,
					cgAnotherseq,
					cgName,
					cgNameEng,
					cgUseNy,
					
					<!-- (select count(aa.cdSeq) from Code aa where 1=1 
					and aa.cdDelNy = 0 and aa.codeGroup_cgseq = a.cgSeq) 
					as xifcdSeqCount, -->
					
					cgNum,
					cgExplanation,
					cgDelNy 
		<include refid="selectCommon"/>
			  order by cgseq desc
			  ) aa
	limit #{rowNumToShow} offset #{startRnumForMysql}
	</select>
	  
	  <insert id="insert"> 
		insert into codegroup (				 
				
				cgAnotherseq,
				cgName,
			    cgNameEng,		
			    cgUseNy,
			    cgNum,
			    cgExplanation,
			    cgDelNy
		 ) values (			 
			
			#{cgAnotherseq},
			#{cgName},
			#{cgNameEng},
			#{cgUseNy},
			#{cgNum},
			#{cgExplanation},
			0 
		)
		<selectKey resultType="String" keyProperty="cgseq" order="AFTER">
				SELECT last_insert_id()
		</selectKey>
	</insert>
</mapper>